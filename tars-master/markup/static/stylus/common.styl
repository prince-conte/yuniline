// Common styles of the project

html, body
    height 100%
    margin 0
    padding 0

* {margin:0px; padding:0px; box-sizing: border-box}   
    
    
body
    font-size BASE_SIZE
    color FONT_COLOR
    line-height LINE_HEIGHT


.page
    // Стили для body

section,
header,
nav
    clearfix()
    
a
    cursor pointer
    font-size inherit
    text-decoration none
    
ul
    list-style-type none
    margin 0
    padding 0
    

article
    
    li
        display block
        margin 15px 0
        padding-left 12px
        position relative
        &:before
            content '';
            position absolute
            display block
            top 12px
            left 0px
            width 4px
            height 4px
            border-radius 50%
            background coltxt
    
    
.index-container
    background colbg
    
.content
    position relative
    margin 0 auto
    display block
    max-width WRAPPER_WIDTH
    min-width 300px
    height inherit
    
    @media screen and (min-width: 600px) and (max-width: 1199px)
        width 100%
        padding 0 20px
    
    @media screen and (min-width: 300px) and (max-width: 1199px)
        width 100%
        padding 0 20px


.page__wrapper
    top 90px
    position relative
    background colbg

.page__buffer
    height 50px
    float-w(100%)

    
h1,
h2,
h3,
h4
    font-weight 400
    
    
    
    
h2,
h3
    display block
    font-size 46px
    font-weight 400
    line-height 46px
    @media screen and (min-width: 300px) and (max-width: 599px)
        font-size 28px
        line-height 28px
    
    
h4
    font-size 28px
    line-height 34px
    font-family fonttxt2
    @media screen and (min-width: 300px) and (max-width: 599px)
        font-size 22px
        line-height 24px
    
    
p
    margin 0px
    padding 0px
    color coltxt
    font-size BASE_SIZE
    
    