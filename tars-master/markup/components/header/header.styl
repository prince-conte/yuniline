.header
    position fixed
    top 0px
    left 0px
    display flex
    width 100%
    height 90px
    background colbg
    border-bottom solid 1px #E6EAEA
    z-index 999999 
    
    
    &__boxmenu
        top 0px
        left 0px
        display inherit
        width 120px
        border-right: 1px solid #E6EAEA
        align-items center
        justify-content center
        height inherit

        
    &__burger

        width 26px
        height 22px
        position relative
        left -25px
        
        &:before
            content 'МЕНЮ'
            position absolute
            font-family fontb
            font-size 12px
            display block
            position absolute
            top 2px
            right -52px
            color coltxt
            m-speed(.2s)
        
        
        span
            
            position absolute
            display block
            top 0px
            height 4px
            width 26px
            background coltxt
            m-speed(.2s)
        
            &:before
                content ''
                position absolute
                display block
                width 18px
                height inherit
                background coltxt
                top 9px
                left 0px
                m-speed(.2s)
            
                
            &:after
                content ''
                position absolute
                display block
                width 26px
                height inherit
                background coltxt
                top 18px
                left 0px
                m-speed(.2s)
                
    &__boxmenu:hover
        .header__burger
            &:before
                color colfirm
        
        
            span
            
                position absolute
                display block
                top 0px
                height 4px
                width 26px
                background colfirm
        
                &:before
                    width 26px
                    background colfirm
            
                
                &:after
                    width 26px
                    background colfirm
       
                
    &__container
        display inherit
        justify-content space-between
        height inherit
        align-items center
        width auto
        v = 100%
  
        width: "calc(%s - 120px)" % v
                
    
    &__logo-block
        display block
        height 65px
        width auto
        img
            height 100%
            width auto
            
            
    &__shop-and-login
        display inherit
        flex-direction row-reverse
        height inherit
        
        
    &__in-shop
        width 220px
        background colfirm
        height inherit
        display inherit
        justify-content center
        align-items center
        
        span
            color #fff
            font-family fontb
            font-size 14px
            display inline-block
            text-transform uppercase
            
    &__login
        padding 0 35px
        height inherit
        display inherit
        justify-content center
        align-items center
        
        span
            display inline-block
            font-size 12px
            color coltxt
            text-transform uppercase
            b
                font-family fontb
                
                
                
    &__serch-block
        padding 0 35px
        padding-left 55px
        height inherit
        display inherit
        justify-content center
        align-items center
        position relative
        
        &_go
            content '';
            position absolute
            display block
            width 16px
            height 16px
            background  url(../img/general/search.svg)
            left 37px
            top 37px
        
        
        
        input
            font-family fontb
            font-size 12px
            background transparent
            text-transform uppercase
            outline none
            padding 10px
            border solid 0px
            box-shadow 0
            placeholder-color(coltxt)
            
            
    &__social
        padding 0 35px
        height inherit
        display inherit
        justify-content center
        align-items center
        position relative
        a
            margin 0 7px
            
            
        .vkontakte-ico
            bg-svg($vkontakte); 
            width 24px
            height 24px
                       
        .facebook-ico
            bg-svg($facebook); 
            width 24px
            height 24px
            
                                   
        .odnoklassniki-ico
            bg-svg($odnoklassniki); 
            width 24px
            height 24px
            
            
            
        
            
    &__region
        display inherit
        flex-direction reverse
        height inherit
        justify-content center
        align-items center
        
                
        a
            display inline-block
            font-size 13px
            color coltxt
            text-transform uppercase
            color colfirm
            margin-left 10px
        b
            font-size 13px
            font-family fontb
            color coltxt
            text-transform uppercase
                
        
               
        
        
        
            
        
        