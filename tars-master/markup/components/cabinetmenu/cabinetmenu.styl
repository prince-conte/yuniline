.cabinetmenu
    max-width: 100%;
    margin-top: 0px;
    border solid 1px #e6eaea

    
    &__item
        display block
        padding 20px
       
        &:not(last-child)
            border-bottom solid 1px #e6eaea
            
        &:hover
            a
                color colfirm
            
            
        a
            display inline-block
            font-size 16px
            text-transform uppercase
            font-family fontb
            color coltxt
            m-speed(.2s)
            
            
        i
            position relative
            top 2px
            display inline-block
            font-size 18px
            color colfirm
            margin-right 15px
            font-weight 700
            
            
