.news-block
    display flex
    flex-direction column
    flex-basis 60%
    max-width 65%
    @media screen and (min-width: 300px) and (max-width: 1023px)
        display block
        width 100%
        max-width 100%
        
    &__addnews
        padding 12px 10px 10px
        text-align center
        




    &__anons-article
        display flex
        height 280px
        flex-wrap wrap
        margin 10px 0
        @media screen and (max-width: 1260px)
            height 193px
        @media screen and (min-width: 300px) and (max-width: 599px)
            height auto
            min-height 130px
            display block
        
        
        &__image-box
            flex-basis 33.33333%
            max-width 33.33333%
            padding-left 10px
            padding-right 10px
            overflow hidden
            height inherit
            @media screen and (min-width: 300px) and (max-width: 599px)
                display none
        
            img
                width 100%
                max-width 100%
                height auto
                display block
            
        &__content
            display flex
            box-sizing border-box
            flex-basis 66.66667%
            max-width 66.66667%
            padding-left 10px
            padding-right 10px
            align-content center
            flex-wrap wrap
            @media screen and (min-width: 300px) and (max-width: 599px)
                flex-basis 100%
                max-width 100%
                display block
        
        &_title
            display inherit
            font-size 26px
            font-family fontb
            line-height 30px
            margin 10px 0
            color coltxt
            width 100%
            text-transform uppercase  
            
            @media screen and (max-width: 1440px)
                font-size 20px
                    
            @media screen and (max-width: 1260px)
                font-size 18px
                line-height 20px
                            
            @media screen and (min-width: 300px) and (max-width: 599px)
                font-size 16px
                line-height 18px
                display block
        
              
        &_tag
            display inherit
            font-size 12px
            line-height 12px
            font-family fontblack
            letter-spacing 2px
            margin 10px 0
            color coltxt
            text-transform uppercase
            color colfirm
            width 100%
            @media screen and (min-width: 300px) and (max-width: 599px)
                display block
                width 100%
                max-width 100%
    
             
              
        &_date
            display inherit
            font-size 10px
            line-height 10px
            margin 10px 0
            color coltxt
            text-transform uppercase
            color #7b7b7b
            width 100%
            @media screen and (min-width: 300px) and (max-width: 599px)
                display block
                width 100%
                max-width 100%
          
            
    
    
    &__anons-article-big 
        flex-wrap wrap
        flex-flow column
        height auto
        max-height none
        @media screen and (min-width: 300px) and (max-width: 599px)
            display block
            width 100%
            max-width 100%
    

        
        .news-block__anons-article__image-box
            width 100%
            max-width 100%
            flex-basis 100%
            padding 0px 10px 20px
            height auto
            max-height none
            @media screen and (min-width: 300px) and (max-width: 599px)
                display block
                width 100%
        
            
        .news-block__anons-article__content
            width 100%
            max-width 100%
            flex-basis 100%
            padding 20px 10px
            @media screen and (min-width: 300px) and (max-width: 1023px)
                display block
                width 100%
                max-width 100%
    
        
    
    