.jobspost
    display flex
    flex-direction column
    flex-basis 60%
    max-width 65%
    padding 20px 0

    .category-news
        margin-bottom 35px
    
    
    &__item
        display flex
        flex-direction column
        padding 15px 10px 10px
        flex-basis 100%
        
        &_title
            font-size: 22px;
            padding-bottom 6px
            border-bottom solid 1px #e6eaea
            font-family fontb
            text-transform uppercase
            m-speed(.4s)
            &:hover
                border-bottom solid 1px colfirm
                  
            
    &__leftinfo
        padding 25px 35px 20px
        
  
        &_title
            font-size 22px
            line-height 26px
            font-family fontb
            color colfirm
               
        &_description
            font-size 16px
            line-height 18px
            margin-top 20px
            

    
            
    