.search-block
    width 100%
    
    &__body
        display block
        width 100%
    
        a
            margin-bottom 20px
            display block
            
    &__quantity
        font-family 18px
        line-height 24px
        font-family fontblack
        text-transform uppercase
        padding-left 10px
        margin-bottom 40px

        
    &__title
        display block
        padding-left 10px
        font-size 18px
        font-family fontb
        color coltxt
        m-speed(.4s)
        
        &:hover
            color colfirm
        
                
        &:visited
            color coltxt
        
        
            
    .category-news__active-category
        margin 40px 0
        justify-content flex-start
        padding 0 10px
    .category-news__active-category_title
        text-align left
        font-size 22px
        
    .button-block
        width 100%
