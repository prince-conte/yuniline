.nav
    height 60px
    display block
    background colbg
    z-index 999
    border-bottom  solid 1px #E6EAEA
    @media screen and (min-width: 300px)  and (max-width: 1023px) 
        display none
    
    &__topmenu
        display flex
        height inherit
        flex-direction row
        justify-content center
        
        
        
    &__topmenu__item
        position relative
        display flex
        padding 0 35px
        align-items center
        height inherit
        border-right  solid 1px #E6EAEA
        order 1
        cursor pointer
        m-speed(.3s)
        z-index: 99999;
        &:last-child
            border-right  solid 0px
            @media screen and (max-width: 1600px)   
                .nav__sub-menu
                    right 0px
                    left auto
                    
        @media screen and (max-width: 1400px) 
            padding 0 20px
        @media screen and (max-width: 1260px)
            padding 0 10px
            
        
        a
            display block
            font-size 14px
            color coltxt
            font-family fontb
            text-transform uppercase
            white-space nowrap
            @media screen and (max-width: 1260px)
                font-size 13px
            
            
            
            
    &__sub-menu       
        position absolute
        top 100%
        left 0px
        display none
        height inherit
        flex-direction column
        justify-content center
        height auto
        background ALTERNATE_COL 
        z-index 99
        
        &_item
            display flex
            background ALTERNATE_COL 
            height 60px
            align-items center
            border-top solid 1px FONT_COLOR +3%
            min-width 195px
        
        
        a
            display block
            font-size 14px
            color colbg
            font-family fontb
            text-transform uppercase
            white-space nowrap
            
                    
            @media screen and (max-width: 1400px) 
                padding 0 20px
            @media screen and (max-width: 1260px)
                padding 0 10px
                
        a:not(.button)
            width 100%
            padding 19px 35px
            
            
        li:hover
            background ALTERNATE_COL  + 10%
            a
                color colbg
            
            
            
    &__topmenu__item:hover
        background ALTERNATE_COL
        a
            color colbg
            @media screen and (max-width: 1260px)
                font-size 13px
            
        .nav__sub-menu
            display flex
            
            
        
            
    &__sub-subscribe
        display flex
        min-width 500px
        flex-basis 400px
        flex-wrap wrap
        align-items flex-start
        padding 20px
        align-content flex-start
        max-height 345px
        
        &_magazine
            max-width 25%
            flex-basis 25%
            padding 10px
            height auto
        
        a
            padding 0px !important
        
        img
            width 100%
            height auto
            
      
    .button-block
        padding 0 25px 20px
        margin-top -5px
            
    .button
        display inline-block
        
        
        
        
                
        
        
        
    