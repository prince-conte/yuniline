.departmentscontact
    display block
    margin 45px 0
    padding 0 10px
    
    &_title
        margin-bottom 45px
        font-size 24px
        line-height 32px
        padding 0
        text-transform uppercase
        @media screen and (max-width: 760px)
            font-size 22px
        
        
    &__body
        border solid 1px #e6eaea
        min-height 400px
        display flex
        flex-direction row
        @media screen and (max-width: 760px)
            border solid 0px
            display block
        
        
        &__content
            max-width 100%
            flex-basis 55%
            padding 35px
            @media screen and (max-width: 760px)
                flex-basis 100%
                display block
                padding 15px
                padding 35px 0
                
            a
                &:hover
                    color colfirm
                
                 
        &__feedback
            max-width 100%
            flex-basis 45%
            padding 10px
            border-left solid 1px #e6eaea
            @media screen and (max-width: 760px)
                flex-basis 100%
                display block
                border solid 0px
                      
            .form
                margin-top 0px
            
            .input-block
                flex-basis 100%
                max-width 100%
                
            .input-block--last
                margin-top 0px
                
            .form__submit__capcha
                max-height 80px
                @media screen and (max-width: 400px)
                    margin-left -30px
            
        
        &__general-contacts
            padding 10px 0
            border-bottom solid 1px #e6eaea
            text-align center
            
            
            &_adress
                display inline-block
                font-family fontb
                font-size 20px
                line-height 26px
                padding 0 10px
                margin-bottom 20px
                span
                    font-family fonttxt
                    margin-left 15px
                    
                @media screen and (max-width: 400px)
                    padding 0
                     
            &_phone
                display inline-block
                font-family fontb
                font-size 16px
                line-height 22px
                padding 0 10px
                margin-bottom 15px
                @media screen and (max-width: 760px)
                    font-size 14px
                    margin-bottom 10px
                span
                    font-family fonttxt
                    margin-left 10px
                    
        &__individual-contacts
            padding 20px 0
            text-align center
            
            .departmentscontact__body__general-contacts_phone
                font-size 15px
                line-height 16px
                display block

            &_title
                text-align center
                font-size 18px
                line-height 28px
                font-family fontb
                margin-bottom 20px
                
                
                
            
            
                             
        
            
            