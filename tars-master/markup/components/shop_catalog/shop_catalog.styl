.shop_catalog
    display flex
    margin-top 45px
    flex-wrap wrap
    margin-bottom -45px
    
    
    &__item
        display inherit
        max-width 100%
        width 16.6666%
        align-items flex-start
        flex-flow column
        min-height 1px
        margin-bottom 65px
        padding 0 10px
        @media screen and (max-width: 760px)
            width 33.333333%    
        @media screen and (max-width: 600px)
            width 50%
        @media screen and (max-width: 400px)
            width 100%
            padding 0 20px
            
            
        
    &__image
        width 100%
        align-items flex-start
        min-height 1px
            
                
    &__title
        display block
        margin-top 5px
        font-family fontb
        text-align left
        text-transform uppercase
        font-size 17px
        line-height 21px
        color coltxt
        padding-left 0
                        
    &__price
        display block
        margin-top 5px
        font-family fontblack
        text-align left
        font-size 14px
        line-height 18px
        color colfirm
        padding-left 0
                         
                
    &__tag
        display block
        margin-top 15px
        font-family fontblack
        text-align left
        text-transform uppercase
        font-size 12px
        color colfirm
        
        
.promo
    display flex
    padding-left 10px
    
    &__slider
        width 65%
        
    &__shop-slider
        .sl
            img
                opacity 1
                
        
    &__bar
        display flex
        flex-direction column
        width 35%
        padding-left 20px
        margin-top -20px
        
        


    &__bar-block-hover
        position absolute
        display block
        width 100%
        height 100%
        top 0
        left 0
        background #000
        opacity .3
        m-speed(.4s)



    &__bar-block-reed-more
        position absolute
        display block
        bottom 20px
        right  20px
        color #fff
        font-family fontb
        font-size 12px
        opacity 0
        m-speed(.4s)

    i
        position relative
        top 2px
        font-size 14px
        font-weight 700
        margin-left 5px


        
        
    &__bar-block
        position relative
        height 50%
        bgP(center, center, cover)
        &:not(:last-child)
            margin 20px 0
            
        &:hover
            .promo__bar-block-reed-more
                opacity 1
            
            .promo__bar-block-hover
                opacity .8
            
            
     
        .center-slider__info
            display block
            transform: translate3d(0, -50%, 0px);
            color #fff
            font-family fontblack
            font-size 24px
            line-height 28px
    
                
    .center-slider__info
        padding 25px
        
        
