.category-news
    display flex
    flex-wrap wrap
    max-width 100%
    flex-basis 100%
    
    &__active-category 
        margin-top 40px
        margin-bottom 10px
        display flex
        flex-wrap nowrap
        justify-content center
        max-width 100%
        flex-basis 100%
        @media screen and (min-width: 300px) and (max-width: 700px)
            display block
            padding 0 10px
            
        
        &_title
            display inline-block
            font-size 26px
            color coltxt
            font-family fontblack
            text-transform uppercase
            @media screen and (max-width: 1200px)
                font-size 18px
            @media screen and (max-width: 600px)
                font-size 16px
                
            .active
                color colfirm
                margin-left 10px
                display inline
                font-size inherit
                font-family fontblack
            
        
    
    &__grid
        display flex
        flex-wrap nowrap
        justify-content center
        max-width 100%
        flex-basis 100%
        @media screen and (max-width: 1200px)
            display block
            text-align center
        @media screen and (min-width: 300px) and (max-width: 700px)
            display block
            text-align left
            padding 0 10px
        
    &__item
        margin 0 20px
        display inherit
        position relative
        @media screen and (max-width: 1200px)
            display block
        @media screen and (min-width: 300px) and (max-width: 700px)
            margin 0
            margin-right 20px
        &:before
            content ''
            position absolute
            display block
            width 5px
            height 5px
            background coltxt
            top 10px
            right -22px
            border-radius 50%
            @media screen and (max-width: 1200px)
                display none
        
            
    
        
        a
            color colfirm
            font-size 16px
            display inline-block
            border-bottom dotted 1px colbg
            m-speed(.2s)
            &:hover
                border-bottom dotted 1px colfirm
            @media screen and (max-width: 1200px)
                font-size 14px
                
            
            
    &__item:last-child
        &:before
            display none
            
    
            
            
        
        
    
