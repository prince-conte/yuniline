        .category-news
            .category-news__active-category 
                .category-news__active-category_title Издательство: <span class="active">Вакансии</span>
            
            
            ul.category-news__grid
        
                li.category-news__item
                    a(href="#") История
                
                li.category-news__item
                    a(href="#") Представительства

                li.category-news__item
                    a(href="#") Отзывы о нас
                 
                li.category-news__item
                    a(href="#") Инф. материалы
                 
                li.category-news__item
                    a(href="#") Вакансии
              
              
