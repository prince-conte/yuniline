        .category-news
            .category-news__active-category 
                .category-news__active-category_title Издательство: <h1 class="active">Представительства</h1>
            
            
            ul.category-news__grid
        
                li.category-news__item
                    a(href="#") История
                
                li.category-news__item
                    a(href="#") Представительства

                li.category-news__item
                    a(href="#") Отзывы о нас
                 
                li.category-news__item
                    a(href="#") Инф. материалы
                 
                li.category-news__item
                    a(href="#") Вакансии
              
              
