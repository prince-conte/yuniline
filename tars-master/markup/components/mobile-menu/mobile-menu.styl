.mobile-menu
    position fixed
    width 100%
    height 100%
    top 0px
    left 0px
    display none
    z-index 999999
    background colbg
    border solid 10px coltxt
    
    &__body-menu
        position absolute
        width 40%
        height 100%
        top 0px
        left 0px
        display flex
        align-content center
        align-items center
        padding 25px
        flex-wrap wrap
        
        
        &__ul
            position relative

        
        &__item
            display inherit
            width 100%
            padding 10px 0
            flex-basis 100%
            float left
            m-speed(.4s)
            padding-right 35px
            border-right solid 6px coltxt
            
            
            &_link
                color coltxt
                font-size 34px
                display block
                text-transform uppercase
                line-height 34px
                font-family fontblack
                m-speed(.4s)
                text-align right
                    
        &__item:hover
            display inherit
            width 100%
            flex-basis 100%
            float left
            
            .mobile-menu__body-menu__item_link
                color colfirm
                
            .mobile-menu__sub-menu
                display block
                
                
                
                
    &__sub-menu
        left 100%
        position absolute
        display none
        top 0px
        height 100%
        m-speed(.4s)
        
            
        &__item
            padding 10px 0
            padding-left 45px
            text-transform uppercase
            &:hover
                color colfirm
                
            a
                font-size 34px
                display block
                line-height 34px
                font-family fontblack
                m-speed(.4s)
                text-align left
                white-space nowrap
                
        &__form
            display block
            padding-left 45px
            min-width 450px
            
            label
                display block
                font-size 30px
                font-family fontblack
                margin 10px 0 20px
                            
            input,
            textarea
                display block
                font-size 14px
                padding 16px 20px
                border solid 1px #939494
                background transparent
                color coltxt
                margin 10px 0
                width 100%
                outline none
                
            textarea
                resize none
                height 150px
                
            .button
                span
                    padding-left 30px
                    padding-right 30px
                    font-size 14px
                    
            &_link
                display block
                margin 20px 0 10px
                text-align left
                font-size 14px
                color coltxt
                font-family fontblack
                m-speed(.4s)
                &:hover
                    color colfirm
                    
            #map
                display block
                margin 10px 0
                width 100%
                border solid 1px #939494
                height 150px
                
                
            &_contact-title
                display block
                font-size 18px
                font-family fontblack
                text-transform uppercase
                margin-top 20px
                
                       
            &_contact-link
                display block
                font-size 16px
                font-family fontb
                text-transform uppercase
                color coltxt
                m-speed(.4s)
                &:hover
                    color colfirm
                    
                    
                
                
    &__close
        width 70px
        height 70px
        position absolute
        display block
        top 45px
        left 45px
        border solid 4px coltxt
        &:hover
            &:before
                color colfirm
        
        &:before
            content 'Закрыть'
            position absolute
            top 20px
            left 130%
            font-family fontblack
            color coltxt
            font-size 18px
            text-transform uppercase
            m-speed(.4s)
            
        
        span
            position absolute
            display block
            height 6px
            width 80%
            pov(45deg)
            background coltxt
            top 30px
            left 7px
                  
        span:before
            content ''
            position absolute
            display block
            height 6px
            width 100%
            pov(92deg)
            background coltxt
            top 0px
            left 0px
                
                
            
                
                

            