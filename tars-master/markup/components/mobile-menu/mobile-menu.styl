.mobile-menu
    position fixed
    width 100%
    height 100%
    top 0px
    left 0px
    display none
    z-index 999999
    background colbg
    border solid 60px coltxt
    @media screen and (max-width: 1600px)
        border solid 45px coltxt
        
    @media screen and (max-width: 1000px)
        border solid 25px coltxt
                
    @media screen and (min-width: 300px) and (max-width: 600px)
        border solid 6px coltxt
        

            
    a:visited
        color coltxt
        
                                        
    a:hover
        color colfirm !important
                    
    
                   
                
    .button
        span
            padding-left 30px
            padding-right 30px
            font-size 14px
            @media screen and (min-width: 300px) and (max-width: 600px)
                font-size 12px
                white-space nowrap
                padding 10px
     
    
    &__body-menu
        position absolute
        width 40%
        height 100%
        top 0px
        left 0px
        display flex
        align-content center
        align-items center
        padding 25px
        flex-wrap wrap
        @media screen and (max-width: 1600px)
            width 45%
        @media screen and (max-width: 1000px)
            width 100%
            display block
            padding-top 30px
            overflow auto
            border-top solid 75px colbg
        @media screen and (min-width: 300px) and (max-width: 600px)
            width 100%
            display block
            overflow auto
            border-top solid 65px colbg
            padding 10px 0

        
        
        &__ul
            position relative

        
        &__item
            display inherit
            width 100%
            padding 10px 0
            flex-basis 100%
            float left
            m-speed(.4s)
            padding-right 35px
            border-right solid 6px coltxt
            @media screen and (max-width: 1400px)
                padding 5px 0
                padding-right 30px
            @media screen and (max-width: 1000px)
                position relative
                border-right solid 0px coltxt

            
            
            &_link
                color coltxt
                font-size 30px
                display block
                text-transform uppercase
                line-height 30px
                font-family fontblack
                m-speed(.4s)
                text-align right
                                    
                &:visited
                    color coltxt
                                    
                &:hover
                    color colfirm !important

                @media screen and (max-width: 1600px)
                    font-size 24px
                    line-height 24px
                
                @media screen and (max-width: 1400px)
                    font-size 20px
                    line-height 20px
                    
                                    
                @media screen and (max-width: 1000px)
                    font-size 26px
                    line-height 28px
                    text-align left
                    padding-left 45px
                    
                                                        
                @media screen and (min-width: 300px) and (max-width: 600px)
                    font-size 18px
                    line-height 20px
                    text-align left
                    padding-left 15px

                
        
                    
        &__item:hover
            display inherit
            width 100%
            flex-basis 100%
            float left
            
            .mobile-menu__body-menu__item_link
                color colfirm
                

                
                
    &__sub-menu
        left 100%
        position absolute
        display none
        top 0px
        height 100%
        m-speed(.4s)
        min-width 650px
        @media screen and (max-width: 1600px)
            min-width 450px
        @media screen and (max-width: 1600px)
            min-width 380px

        @media screen and (max-width: 1000px)
            min-width auto
            max-width 100%
            position relative
            padding 25px 10px
            padding-left 35px
            left auto
                 
            
        
        @media screen and (min-width: 300px) and (max-width: 600px)
            min-width auto
            max-width 100%
            position relative
            padding 15px 5px
            padding-left 10px
            left auto
                 
            
        
            
        &__item
            padding 10px 0
            padding-left 45px
            text-transform uppercase
            &:hover
                color colfirm
            @media screen and (max-width: 1400px)
                padding 5px
                padding-left 30px
               
                
            a
                font-size 30px
                display block
                line-height 30px
                font-family fontblack
                m-speed(.4s)
                text-align left
                white-space nowrap
                @media screen and (max-width: 1600px)
                    font-size 24px
                    line-height 24px
                
                @media screen and (max-width: 1400px)
                    font-size 20px
                    line-height 20px
                                
                @media screen and (min-width: 300px) and (max-width: 600px)
                    font-size 15px
                    line-height 16px
                    white-space normal
                    padding 5px 0
                
        
               
                
        &__form
            display block
            padding-left 45px
            min-width 450px
            @media screen and (max-width: 1000px)
                min-width auto
                max-width 100%
            
            label
                display block
                font-size 30px
                font-family fontblack
                margin 10px 0 20px
                @media screen and (max-width: 1600px)
                    font-size 24px
                    
                @media screen and (max-width: 1000px)
                    font-size 22px
                    
                @media screen and (min-width: 300px) and (max-width: 600px)
                    font-size 19px
                            
            input,
            textarea
                display block
                font-size 14px
                padding 16px 20px
                border solid 1px #939494
                background transparent
                color coltxt
                margin 10px 0
                width 100%
                outline none
                @media screen and (max-width: 1400px)
                    padding 10px
                    
                
            textarea
                resize none
                height 150px
                @media screen and (max-width: 1400px)
                    height 100px
                
                
                    
            &_link
                display block
                margin 20px 0 10px
                text-align left
                font-size 14px
                color coltxt
                font-family fontblack
                m-speed(.4s)
                &:hover
                    color colfirm

            #map
                display block
                margin 10px 0
                width 100%
                border solid 1px #939494
                height 150px
                @media screen and (max-width: 1600px)
                    display none
                
                
            &_contact-title
                display block
                font-size 18px
                font-family fontblack
                text-transform uppercase
                margin-top 20px
                @media screen and (max-width: 1440px)
                    font-size 16px
                    
                    
                
                
                       
            &_contact-link
                display block
                font-size 16px
                font-family fontb
                text-transform uppercase
                color coltxt
                m-speed(.4s)
                &:hover
                    color colfirm
                    
                    
                
                
    &__close
        width 60px
        height 60px
        position absolute
        display block
        top 20px
        left 20px
        border solid 4px coltxt
        &:hover
            &:before
                color colfirm
        
        &:before
            content 'Закрыть'
            position absolute
            top 13px
            left 130%
            font-family fontblack
            color coltxt
            font-size 18px
            text-transform uppercase
            m-speed(.4s)
            @media screen and (max-width: 1000px)
                left -110px
                top 4px
            
            
        @media screen and (max-width: 1400px)
            width 40px
            height 40px

                    
        @media screen and (max-width: 1000px)
            width 40px
            height 40px
            left auto
            right 40px
     
                    
        @media screen and (min-width: 300px) and (max-width: 600px)
            width 40px
            height 40px
            left auto
            right 20px
            top 10px
            
        
            
        
        span
            position absolute
            display block
            height 6px
            width 80%
            pov(45deg)
            background coltxt
            top 24px
            left 6px
            @media screen and (max-width: 1400px)
                height 4px
                top 15px
                left 4px
                  
        span:before
            content ''
            position absolute
            display block
            height 6px
            width 100%
            pov(92deg)
            background coltxt
            top 0px
            left 0px
            @media screen and (max-width: 1400px)
                height 4px
            
            
            
            
    &__social
        display block
        width 100%
        float left
        margin 20px 0 30px
        a
            display inline-block
            float left
            width 50px
            height 50px
            margin-right 12px
            
        .vk
            bg-svg($vk-big);  
                      
        .face
            bg-svg($face-big);
                                    
        .od
            bg-svg($od-big);
            
            
    &_title-sub-menu
        display block
        font-size 30px
        font-family fontblack
        margin 10px 0 20px
        width 100%
        @media screen and (max-width: 1600px)
            font-size 24px
                    
        @media screen and (max-width: 1000px)
            font-size 22px
                    
        @media screen and (min-width: 300px) and (max-width: 600px)
            font-size 19px
                    
                
            
            
            
    &__sub-jornals
        display flex
        max-width 100%
        flex-basis 100%
        flex-direction row
        justify-content flex-start
        flex-wrap wrap
        padding 0px 35px
        
        @media screen and (max-width: 1000px)
            display block
            
        &--top-margin
            margin-top 45px
            
        
        &__item
            max-width 25%
            flex-basis 25%
            flex-direction column
            justify-content center
            @media screen and (max-width: 1000px)
                display inline-block
                float left
            @media screen and (min-width: 300px) and (max-width: 600px)
                display inline-block
                float left
                max-width 50%
            
            
        &__image
            max-width 80%
            flex-basis 80%
            img
                width 100%
                height auto
                
        &_title
            max-width 80%
            flex-basis 80%
            text-align center
            font-size 14px
            font-family fontb
            margin-bottom 20px
            
            
            
            
                
    .active__sub
        .mobile-menu__body-menu__item_link
            color colfirm
        .mobile-menu__sub-menu
            display block
                
                

            