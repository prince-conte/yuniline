.footer
    min-height 300px
    border-top solid 1px #E6EAEA
    margin-top 50px
        
        
    
        
    &__grid-sub
        display flex
        flex-wrap wrap
        padding 0 10px
        margin-top 30px
        padding-top 35px
        border-top solid 1px #E6EAEA
        &:first-child
            border-top solid 0px #E6EAEA
            margin-top 0

            
        
        
    &__item
        display flex
        padding-top 45px
        max-width 33.33333%
        flex-basis 33.33333%
        min-height 250px
        max-height 250px
        flex-flow row
        &:last-child
            padding-left 55px
            
            @media screen and (max-width: 1440px)
                padding-left 35px
                         
            @media screen and (max-width: 1260px)
                padding-left 0px
                max-width 100%
                flex-basis 100%
                
        @media screen and (min-width: 601px) and (max-width: 1260px)
            max-width 50%
            flex-basis 50%
        @media screen and (min-width: 300px) and (max-width: 600px) 
            max-width 100%
            flex-basis 100%
            padding-top 15px
            max-height none
            
            
        
            
    .item-25per
        max-width 25%
        flex-basis 25%
        &:last-child
            padding-left 0px
            
        @media screen and (min-width: 768px) and (max-width: 1023px)    
            max-width 50%
            flex-basis 50%
                        
        @media screen and (min-width: 590px) and (max-width: 767px)    
            max-width 50%
            flex-basis 50%
                                   
        @media screen and (min-width: 300px) and (max-width: 588px)    
            max-width 100%
            flex-basis 100%
            
            
    &__body
        display inherit
        max-width 100%
        flex-basis 100%
        padding-right 10px
        flex-flow column
        
    .subscribe-magazine
        max-width 60%
        flex-basis 60%
        
    &_title
        font-size 20px
        font-family fontb
        text-align left
        line-height 22px
        margin-bottom 20px

            
    &_description
        font-size 16px
        line-height 20px
            
    &__magazine
        display block
        width 30%
        padding-left 10px
        align-content flex-start
        img
            width 100%
            height auto
            
            
            
            
            
    &__subscribe-news
        flex-flow row
        flex-wrap wrap
        margin-top 20px

        
        &_input-email
            padding 15px 20px 13px
            font-size 16px
            color coltxt
            background #fff
            outline none
            display inline-block
            height 50px
            
        &_send
            display inline-block
            margin 0px
            text-align left
            .button
                outline none
                
            input
                visibility hidden
                width 0px
                height 0px
                
                
                
    &__contacts
        height 20px
        max-width 100%
        flex-basis 100%
        display flex
        justify-content left
        align-items start
        position relative
        &:first-child
            @media screen and (min-width: 300px) and (max-width: 588px)
                height 120px
                    
        @media screen and (min-width: 300px) and (max-width: 588px)
            width 100%
            display block
            height auto
            margin-bottom 25px

        
        &_title
            display inline-block
            font-size 16px
            margin-right 25px
            font-family fontb
            @media screen and (max-width: 1260px)
                br 
                    display none

            
            

        a
            margin 0 7px
            
            
        &_link
            display inline-block
            margin 0
            font-size 14px
            color coltxt
            display inline
            font-family fonttxt
            m-speed(.4s)
            &:hover
                color colfirm
        
            
            
        .vkontakte-ico
            bg-svg($vkontakte); 
            width 24px
            height 24px
            @media screen and (min-width: 300px) and (max-width: 588px)
                display inline-block
                margin 7px
                       
        .facebook-ico
            bg-svg($facebook); 
            width 24px
            height 24px
            @media screen and (min-width: 300px) and (max-width: 588px)
                display inline-block
                margin 7px
            
                                   
        .odnoklassniki-ico
            bg-svg($odnoklassniki); 
            width 24px
            height 24px
            @media screen and (min-width: 300px) and (max-width: 588px)
                display inline-block
                margin 7px
            
            
            
            
    &__sub-menu
        display flex
        flex-flow column
        max-width 100%
        flex-basis 100%
        
        &_item
            display block
            width 100%
            
            a
                display block
                font-size 14px
                line-height 14px
                padding 8px 0
                color coltxt
                font-family fonttxt
                m-speed(.4s)
                &:hover
                    color colfirm
                    
                    
    &__copyright
        display flex
        width 100%
        padding 20px 0
        align-content flex-start
        flex-wrap wrap
        
        p
            font-size 14px
            text-align left
            display block
            max-width 100%
            flex-basis 100%
            text-transform uppercase
            
            .copy
                display inline-block
                margin-left 45px
                text-transform uppercase
                @media screen and (min-width: 300px) and (max-width: 767px)
                    margin-left 0px
                
                
                
                
                
                
    &__razdel-title
        position relative
        &:before
            content ''
            position absolute
            display block
            width 35px
            height 3px
            background colfirm
            bottom -8px
            
            
    .footer__contacts--socials
        @media screen and (min-width: 300px) and (max-width: 599px)
            min-height 90px
        
            
                
            
        
            
        
            
            
                
        
            
            
            
    
            
            
        
        
        
            
        
        
    
        