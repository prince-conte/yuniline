.magazines-grid
    display flex
    flex-wrap wrap
    margin-top 30px
    
    &__item
        display inherit
        max-width 100%
        flex-basis 25%
        flex-flow column
        margin-bottom 20px
        padding 0 10px
        @media screen and (max-width: 760px)
            max-width 33.333333%
            flex-basis 33.333333%        
        @media screen and (max-width: 600px)
            max-width 50%
            flex-basis 50%
        @media screen and (max-width: 400px)
            max-width 100%
            flex-basis 100%
            padding 0
            
        
    &__image
        display block
        width 100%
        height auto
            
                
    &__title
        display block
        margin-top 5px
        font-family fontb
        text-align left
        text-transform uppercase
        font-size 17px
        line-height 21px
        color coltxt
        padding-left 0
                         
                
    &__tag
        display block
        margin-top 15px
        font-family fontblack
        text-align left
        text-transform uppercase
        font-size 12px
        color colfirm
            
        