.magazines-grid
    display flex
    flex-direction row
    flex-wrap wrap
    justify-content flex-start
    margin-top 30px
    
    &__item
        display inherit
        max-width 100%
        flex-basis 25%
        flex-flow column
        margin-bottom 20px
        padding 0 10px
        
    &__image
        display block
        width 100%
        height auto
            
                
    &__title
        display block
        margin-top 5px
        font-family fontb
        text-align left
        text-transform uppercase
        font-size 17px
        line-height 21px
                         
                
    &__tag
        display block
        margin-top 15px
        font-family fontblack
        text-align left
        text-transform uppercase
        font-size 12px
        color colfirm
            
        