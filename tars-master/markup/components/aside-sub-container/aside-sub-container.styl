.aside-sub-container
    width 35%
    padding-left 40px
    margin-top 50px
    @media screen and (max-width: 1440px) 
        width 30%
        padding 0
        
    @media screen and (max-width: 1200px) 
        width 35%
        padding 0
             
    @media screen and (max-width: 1023px) 
        width 100%
        padding 0
        
    &--shop
        margin-top 0
        
        
    .sticky-block
        @media screen and (min-width: 300px) and (max-width: 1024px)
            position relative !important
            padding-top 0 !important
            
            
            
    &--magazine
        padding-left 100px
        padding-right 45px
        @media screen and (max-width: 1280px)
            padding-left 35px
            padding-right 35px
        @media screen and (max-width: 600px)
            padding-left 25px
            padding-right 25px
            
            
    &--cabinet
        
        padding-left 65px
        padding-right 45px
        @media screen and (max-width: 1280px)
            padding-left 30px
            padding-right 35px
        @media screen and (max-width: 600px)
            padding-left 25px
            padding-right 25px
            
        
            
.baner-box--fixed 
    position fixed
    top 20px
        