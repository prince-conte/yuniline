.aside-sub-container
    position absolute
    right 0px
    top 0px
    width 35%
    padding-left 40px
    margin-top 50px
    display flex
    flex-direction column
    @media screen and (max-width: 1440px) 
        width 35%
        padding 0 20px
        
    @media screen and (min-width: 300px) and (max-width: 1023px)
        position relative
        width 100%
        display block
        
        
        
        
    .sticky-block
        @media screen and (min-width: 300px) and (max-width: 1023px)
            position relative !important
            padding-top 0 !important
        