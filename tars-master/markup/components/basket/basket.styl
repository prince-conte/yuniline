.basket 
	margin-bottom 35px
	
	.form
		margin-top 0
		padding 0
		
		
		
		label
			font-family fontb
			

	
	
	&__title
		font-size 24px
		line-height 28px
		color coltxt
		display block
		margin-bottom 20px
		font-family fontb
		text-transform uppercase
		
		
	&__item
		display flex
		padding 20px
		@media screen and (max-width: 760px)
			display block
			padding 20px 10px
		
	&__image
		margin-right 25px
		width 30%
		
		@media screen and (max-width: 760px)
			width 100%
			margin-bottom 20px
		
		img
			width 100%
			vertical-align top
			min-height 1px
			
			
	&__item-title
		font-size 20px
		line-height 23px
		color coltxt
		font-family fontb
		text-transform uppercase
		
	&__content
		display flex
		width 100%
		flex-direction column
		flex-wrap wrap
		
		.number-block
			margin 15px 0
			padding-left 0
		
		.button-block
			padding-left 0 !important
			padding-top 20px;
			
			@media screen and (max-width: 760px)
				display flex
				margin-top 20px !important
			
			.button
				&:not(:last-child)
					margin-right 20px
					
					@media screen and (max-width: 760px)
						margin-right 10px

				span
					padding: 14px 20px;
	&__item-desk
		margin-top 5px
	

		
		