mixin cabinet(data)


    .news-block.cabinet

        form.form
        
            h2.form-title Личная информация

            .input-block
                label
                    span.obligatorily Имя
                input(type="text" value="Александр" disabled required)
          
            .input-block
                label
                    span.obligatorily Фамилия
                input(type="text" value="Козлов" disabled required)
                
            .input-block
                label
                    span Отчество
                input(type="text" value="Викторович" disabled)
       
                       
            .input-block
                label
                    span Дата рождения
                input(type="text" id="date" placeholder="99/99/9999" disabled)
                              
            .input-block.input-block--big
                label
                    span Телефон
                input(type="text" id="phone" placeholder="(999) 999-9999" disabled)
       
       
        
          
            .input-block
                label
                    span.obligatorily E-mail / Логин
                input(type="text" value="prince-conte@outlook.com" disabled required)
                
            .input-block
                label
                    span  Выберите домашний регион: 
                select(class="js-example-basic-single"  disabled)
                    option(value="AL") Европа
                    option(value="AL") Беларусь
                    option(value="AL") Казахстан
                    option(value="AR") Москва
                    option(value="AR") Смоленск
                     

            .button-block
                .button#form-submit-button
                    span Редактировать
                input.form_file#form-submit-input(type="submit")
                
        
        
        form.form
        
            h2.form-title Сменить пароль
 
            .input-block
                label
                    span.obligatorily Нынешний пароль
                input(type="text" required)
                             
            .input-block
                label
                    span.obligatorily Новый пароль
                input(type="text" required)
                
                
            .button-block
                .button#form-submit-button
                    span Сменить пароль
                input.form_file#form-submit-input(type="submit")
                
                
                     
    