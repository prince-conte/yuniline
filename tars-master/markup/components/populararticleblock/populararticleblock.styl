.popular-article-block
    display flex
    flex-direction column
    flex-basis 100%
    max-width 100%
    margin 20px 0px
    min-height 350px
    m-speed(.1s)
    
    @media screen and (max-width: 1440px) 
        padding-left 20px
        padding-right 20px
         
    @media screen and (min-width: 300px) and (max-width: 588px) 
        padding-left 0px
        padding-right 0px
        
    
    
        
    
    &__title
        display block
        text-align center
        font-size 20px
        color coltxt
        padding 0 10px
        margin-bottom 30px
        position relative
        text-transform uppercase
        font-family fontb
        @media screen and (max-width: 1440px) 
            font-size 18px
        
        &:before
            content '';
            position absolute
            display block
            height 4px
            width 50px
            left 50%
            bottom -10px
            margin-left -25px
            background colfirm
            

        
    &__body 
        display flex
        width: 100%;
        padding-bottom: 8px;
        margin-bottom: 18px;
        counter-reset: li;
        padding: 0;
        list-style: none;
        margin-left: 18px;
        flex-direction column
        @media screen and (max-width: 1440px) 
            margin-left 0px
    
        &__anons  
            position: relative;
            display flex
            max-width 100%
            flex-basis 100%
            min-height 60px
            font-size: 15px;
            padding : 10px 0;
            padding-left 50px
            border-bottom solid 1px #e6eaea
            m-speed(.4s)
            &:last-child
                border-bottom solid 0px
                &:hover
                    border-bottom solid 0px
                
            &:hover
                border-bottom solid 1px colfirm
                
            @media screen and (min-width: 300px) and (max-width: 588px)
                padding-left 0px
                

            a
                display inherit
                justify-content space-between
                flex-flow row
                flex-basis 100%
            
            &_titile-anons
                font-size 12px
                font-family fontb
                max-width 75%
                flex-basis 75%
                display flex
                line-height 14px
                color coltxt
                text-transform uppercase
                m-speed(.4s)
                
    
            
            &_image-anons
                max-width 50px
                flex-basis 50px
                max-height 50px
                overflow hidden
                display flex
                img
                    width 100%
                    height auto
                
    

    
    .popular-article-block__body__anons:before 
        content: counter(li);
        content: counter(li) '. ';
        counter-increment: li;
        position: absolute;
        top: 1px;
        left: 0;
        padding: 4px 0;
        text-align: center;
        font-size: 26px;
        font-weight 700
        font-family fonttxt
        @media screen and (min-width: 300px) and (max-width: 588px)
            display none
   
            
            
    

        